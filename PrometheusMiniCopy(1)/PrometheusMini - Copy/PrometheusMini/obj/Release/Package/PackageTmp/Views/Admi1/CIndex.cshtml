@model IEnumerable<PrometheusMini.Models.Courses_174852>

@{
    ViewBag.Title = "CIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Courses Details</h2>
<div align="center">
    <input id="Button2" class="btn btn-info" type="submit" value="Search" onclick="location.href='@Url.Action("SearchC")'" />
    <input id="Button3" class="btn btn-info" type="submit" value="Create New" onclick="location.href='@Url.Action("CCreate")'" />
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseId)
        </td>
        <td>
            <input id="Button2" class="btn btn-warning" type="submit" value="Edit" onclick="location.href='@Url.Action("CEdit",new { id = item.CourseId })'" />
            <input id="Button2" class="btn btn-warning" type="submit" value="Details" onclick="location.href='@Url.Action("CDetails",new { id = item.CourseId })'" />
            <input id="Button2" class="btn btn-warning" type="submit" value="Delete" onclick="location.href='@Url.Action("CDelete",new { id = item.CourseId })'" />
        </td>
    </tr>
    }

</table>
